<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta {{name}}="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://kit.fontawesome.com/c4a8f670ae.js"></script>
    <title>{{title}}</title>
</head>

<body>
    <header>
        <h1>{{title}}</h1>
        <a href="/">Home</a>
        <a href="/chars/new-char">Create new character</a>
    </header>
    <main class="char__container">
        {{#each chars}}
        <div class="char__card">
            <div class="char__data-group">
                <h2 class="char__name">{{name}}</h2>
                <div class="char__basic-info">
                    <div>Lv {{level}}</div>
                    <div>{{race}}</div>
                    <div>{{charClass}}</div>
                </div>
            </div>
            <div class="char__icons-group">
                <a href="/chars/{{_id}}" class="char__icon"><i class="fas fa-eye"></i></a>
                <a href="/chars/edit-char/{{_id}}" class="char__icon"><i class="fas fa-edit"></i></a>
                <form action="/chars/{{_id}}?_method=DELETE" method="POST">
                    <button type="submit" class="char__icon"><i class="fas fa-trash-alt"></i></button>
                </form>
            </div>
        </div>
        {{/each}}
    </main>
</body>

</html>